            {{!-- btn e click korle this.togglesize action k press kore dibo press korle sheta ulta jabe r ulte gele true hobe true howay true r style gulo dekhabo --}}
            <button type="button" class="text-center btn text-primary" {{on "click" this.toggleSize}} >View Smaller</button>
        </div>
       </div>
    {{else}}
        <div class="col text-center my-auto">
            <img class="w-100 h-100 w-lg-50 h-lg-100 p-0 p-lg-2"
