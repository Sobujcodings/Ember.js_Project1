{{!-- card --}}
<div class="container bg-body-tertiary mb-4 ">
    <div class="row p-4">

        {{!-- image and text from component>rental>image hbs file(here to reuse) --}}
        <Rental::Image></Rental::Image>

        <div class="col-6 col-lg-8 px-0 px-lg-5 w-lg-50">

            {{!-- <LinkTo @route="rental" @model={{@data}}>{{@data.attributes.title}}</LinkTo> --}}
